pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub-credentials') // Jenkins credential ID
        DOCKER_IMAGE = 'my-ml-app:latest'
        DOCKER_REPO = 'yusixs/my-ml-app'
    }

    stages {
        stage('Checkout') {
            steps {
                // Use the correct branch
                git branch: 'main', url: 'https://github.com/Yusixs/mlops-activity-3.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Build the Docker image
                script {
                    docker.build("${DOCKER_IMAGE}", ".")
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                // Log in to Docker Hub
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_HUB_CREDENTIALS}") {
                        echo 'Logged in to Docker Hub'
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                // Tag and push the Docker image to Docker Hub
                script {
                    def image = docker.image("${DOCKER_IMAGE}")
                    image.push()
                }
            }
        }
    }

    post {
        success {
            echo 'Docker image built and pushed successfully!'
        }
        failure {
            echo 'Failed to build or push the Docker image.'
        }
    }
}